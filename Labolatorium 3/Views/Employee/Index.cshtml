

@{
    ViewData["Title"] = "Lista Pracowników";
}
@model IEnumerable<Labolatorium_3.Models.Employee>

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>PESEL</th>
            <th>Stanowisko</th>
            <th>Oddział</th>
            <th>Data Zatrudnienia</th>
            <th>Data Zwolnienia</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.PESEL</td>
            <td>@item.Position</td>
            <td>@item.Department</td>
            <td>@item.EmploymentDate.ToShortDateString()</td>
            <td>@item.TerminationDate?.ToShortDateString() ?? "N/A"</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>
